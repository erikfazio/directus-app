---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getPosts } from "../../api";

const posts = await getPosts();
---

<BaseLayout>
  <h1>Blog</h1>
  <ul>
    {
      posts.map((post) => (
        <li>
          <a href={`/blog/${post.id}`}>{post.title}</a>
        </li>
      ))
    }
  </ul>
</BaseLayout>
